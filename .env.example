# Huafeng AI 配置（示例）

# —— DeepSeek（OpenAI兼容） ——
HUAFENG_DEEPSEEK_BASE_URL=https://api.deepseek.com
HUAFENG_DEEPSEEK_API_KEY=sk-your-key-here

# —— 模型选择 ——
HUAFENG_TEXT2SQL_MODEL=deepseek-chat
HUAFENG_ANALYSIS_MODEL=deepseek-chat

# —— 日志配置 ——
HUAFENG_LOG_LEVEL=DEBUG

# —— 工业数据库（按需） ——
HUAFENG_ENABLE_INDUSTRIAL_DB=true
HUAFENG_DATABASE_MODE=local
HUAFENG_POSTGRES_CONNECT_TIMEOUT=60
HUAFENG_POSTGRES_QUERY_TIMEOUT=15
HUAFENG_POSTGRES_SSLMODE=disable
HUAFENG_LOCAL_POSTGRES_HOST=127.0.0.1
HUAFENG_LOCAL_POSTGRES_PORT=5433
HUAFENG_LOCAL_POSTGRES_DB=huafeng_db
HUAFENG_LOCAL_POSTGRES_USER=postgres
HUAFENG_LOCAL_POSTGRES_PASSWORD=postgres